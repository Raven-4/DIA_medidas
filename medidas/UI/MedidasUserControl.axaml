<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="medidas.UI.MedidasUserControl">
    <Grid>
        <StackPanel>
            <DatePicker Name="FechaDatePicker"/>
            
            <TextBlock Text="Introducir Medidas"/>
            <TextBlock Text="Peso (Kg):"/>
            <TextBox Name="PesoTextBox"/>

            <TextBlock Text="Circunferencia Abdominal (cms.):"/>
            <TextBox Name="CircunferenciaTextBox"/>

            <TextBlock Text="Notas:"/>
            <TextBox Name="NotasTextBox"/>

            <Button Name="GuardarButton" Content="Guardar"/>
        </StackPanel>
    </Grid>
</UserControl>
